<div class="text-center">
  <h2 class="blog-post-title">{{title}}</h2>
  <p class="blog-post-user">Posted by {{user.name}}
  {{!-- on {{format_date date_created}} --}}
  </p>
  <p>{{content}}</p>
</div>

<div class="flex-column justify-center">
  <h3>Comments</h3>
    {{#each comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  <div class="row mt-4">
    {{#if logged_in}}
      <div class="col-md-6">
        <form class="form new-comment-form">
          <div class="form-group">
            <label for="comment-content"><h4>Add a Comment:</h4></label>
            <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Comment</button>
          </div>
        </form>
      </div>
    {{else}}
      <h4>Sign in to leave a comment</h4>
    {{/if}}
</div>

<script src="/js/comment.js"></script>
