<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post:</h3>

    <form class="form new-blog-post-form">
      <div class="form-group">
        <label for="blog-post-title">post title:</label>
        <input class="form-input" type="text" id="blog-post-title" name="blog-post-title" />
      </div>
      <div class="form-group">
        <label for="blog-post-content">content:</label>
        <textarea class="form-input" id="blog-post-content" name="blog-post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <div class="col-md-6 blog-post-list">
    <h3>Current Posts:</h3>
    {{#each blogPosts as |blogPost|}}
      {{> blogpost-details}}
    {{/each}}
  </div>
</div>

<script src="./js/profile.js"></script>
